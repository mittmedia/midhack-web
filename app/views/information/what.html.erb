<% container_color('black')%>
<% container_id('what')%>

<!-- What is Midhack -->
<h1 class="center_text"><%= t(".heading") %></h1>
<% if @application_date_expired %>
  <p><%= raw t(".text_0", email: mail_to(t(".email"))) %></p>
<% end %>
<p><%= t(".text_1") %></p>
<p><%= t(".text_2") %></p>
<p><%= t(".text_3") %></p>

<!-- Good to Know -->
<h3><%= t(".good_to_know.subtitle_1") %></h3>
<p><%= t(".good_to_know.text_1") %></p>

<ul class="list_with_info">
  <li>
    <center><div class="icon place"></div></center>
    <small class ="uppercase semibold"><%= t(".good_to_know.title_place") %></small>
    <p class="text_primary_color"><%= t(".good_to_know.place") %></p>
  </li>
  <li>
    <center><div class="icon price"></div></center>
    <small class ="uppercase semibold"><%= t(".good_to_know.title_price") %></small>
    <p class="text_primary_color"><%= t(".good_to_know.price") %></p>
  </li>
  <li>
    <center><div class="icon date"></div></center>
    <small class ="uppercase semibold"><%= t(".good_to_know.title_date") %></small>
    <p class="text_primary_color"><%= t(".good_to_know.date") %></p>
  </li>
  <li>
    <center><div class="icon spots_left"></div></center>
    <small class ="uppercase semibold"><%= t(".good_to_know.title_spots_left") %></small>
    <p class="text_primary_color"><%= @nr_spots_left %></p>
  </li>
</ul>
<br>
<br>
<br>
<% unless @application_date_expired %>
  <p><%= t(".interaction.tease") %></p>
  <% if @signed_up %>
    <%= link_to t('.interaction.my_receipt'), receipt_path, class: 'btn_primary', id:'receipt_button' %><br>
    <%= link_to t('.interaction.signup_friend'), choose_education_path(force: true), class: 'btn_secondary', id:'new_signup_button' %><br>
  <% elsif @on_waiting_list %>
    <%= link_to t('.interaction.my_reservation'), reservation_receipt_path, class: 'btn_primary', id:'receipt_button' %><br>
    <%= link_to t('.interaction.signup_friend'), choose_education_path(force: true), class: 'btn_secondary', id:'new_signup_button' %><br>
  <% else %>
    <%= link_to t('.interaction.primary_action'), choose_education_path, class: 'btn_primary', id:'signup_button' %><br>
  <% end %>
<% end %>
<br>
<br>
<br>
