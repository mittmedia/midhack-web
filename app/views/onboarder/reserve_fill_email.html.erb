<%= container_color('primary') %>
<%= container_id('fill_email') %>
  <%= form_tag(save_reservation_email_path) do %>
    <h1 class="center_text">
      <%= label_tag(:email, t('.heading', competence: t(".competences.#{@human.competence.name}"))) %>
    </h1>
    <p class="center_text" ><%= t('.text_waitinglist') %></p>
    <p class="center_text"> <%= link_to t(".go_back"), choose_competence_path, class: 'btn_supplementary inline-block' %></p>
    <% if flash[:notice].present? %>
      <% flash[:notice] %>
      <div class="notice"><p class="notice_text"><%= flash[:notice] %></p></div>
    <% end %>
    <div class="labeled_input">
      <%= label_tag(:email, t(".type_email"), class: 'labeled_input__label') %>
      <%= email_field_tag(:email, '', placeholder: t('.placeholder'), class: 'labeled_input__input') %>
    </div>
    <%= submit_tag t(".send_application"), id:'submit_button', class: 'btn_primary' %>
  <% end %>
  <%# link_to "Tillbaka", choose_competence_path, class: 'btn positive' %>
</div>
